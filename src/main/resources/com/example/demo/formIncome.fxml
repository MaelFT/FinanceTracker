<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="CENTER" stylesheets="@css/styles.css" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.controller.NewIncome">
    <GridPane alignment="CENTER" hgap="10" vgap="10" styleClass="grid-pane">

        <Label text="Période:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="periodeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Salaire:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="salaireField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Aides:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="aidesField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Auto-entreprise:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="autoEntrepriseField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Revenus passifs:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="revenusPassifsField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Autres:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="autresField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    </GridPane>

    <HBox alignment="BOTTOM_RIGHT" spacing="10" styleClass="hbox">
        <Button text="Annuler" fx:id="cancelButton" onAction="#cancel" styleClass="button" style="-fx-background-color: #a40026; -fx-text-fill: white;"/>
        <Button text="Créer" fx:id="addButton" onAction="#create" styleClass="button" style="-fx-background-color: #0055A4; -fx-text-fill: white;"/>
    </HBox>
</VBox>
